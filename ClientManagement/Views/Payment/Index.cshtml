@model IEnumerable<ClientManagement.Models.Payment>

@{
    ViewData["Title"] = "Index";
}

<h1 class="centered">Payments List</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Amount)</th>
            <th>@Html.DisplayNameFor(model => model.Client)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                <td>@Html.DisplayFor(modelItem => item.Client.Email)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PaymentId" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PaymentId" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PaymentId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
