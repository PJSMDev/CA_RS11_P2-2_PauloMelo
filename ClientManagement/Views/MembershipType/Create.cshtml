@model ClientManagement.Models.MembershipType

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>MembershipType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MembershipTypeName" class="control-label"></label>
                <select asp-for="MembershipTypeName" class="form-control"></select>
                <span asp-validation-for="MembershipTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsRecurring" /> @Html.DisplayNameFor(model => model.IsRecurring)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="LoyaltyMonths" class="control-label"></label>
                <input asp-for="LoyaltyMonths" class="form-control" />
                <span asp-validation-for="LoyaltyMonths" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
